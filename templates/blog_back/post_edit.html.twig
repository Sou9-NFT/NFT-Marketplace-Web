{% extends 'base.html.twig' %}

{% block title %}Edit Blog Post{% endblock %}

{% block body %}
<div class="pagetitle">
    <h1>Edit Blog Post</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_home_page_back') }}">Home</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_back_blog_index') }}">Blog Posts</a></li>
            <li class="breadcrumb-item active">Edit Post</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Edit Blog Post</h5>

                    {{ form_start(form) }}
                    
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label">Title</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.title) }}
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label">Content</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': 10}}) }}
                            {{ form_errors(form.content) }}
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Update Post
                            </button>
                            <a href="{{ path('app_back_blog_index') }}" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
