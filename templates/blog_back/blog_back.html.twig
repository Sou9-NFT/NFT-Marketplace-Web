{% extends 'base_back.html.twig' %}

{% block title %}Blog Back Office{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1>Blog Management</h1>
            
            <!-- Debug Info -->
            <div class="card mb-4">
                <div class="card-body">
                    <h5>Debug Information</h5>
                    <p>Number of blogs: {{ blogs|length }}</p>
                    <p>Number of comments: {{ comments|length }}</p>
                </div>
            </div>

            <!-- Posts -->
            <div class="card mb-4">
                <div class="card-body">
                    <h5>Posts</h5>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Title</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for blog in blogs %}
                                <tr>
                                    <td>{{ blog.id }}</td>
                                    <td>{{ blog.title }}</td>
                                    <td>{{ blog.date ? blog.date|date('Y-m-d') : '' }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3">No posts found</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Comments -->
            <div class="card">
                <div class="card-body">
                    <h5>Comments</h5>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Author</th>
                                <th>Content</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for comment in comments %}
                                <tr>
                                    <td>{{ comment.id }}</td>
                                    <td>{{ comment.author }}</td>
                                    <td>{{ comment.content }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3">No comments found</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
