{% extends "base_back.html.twig" %}

{% block title %}Comments{% endblock %}

{% block body %}
<main id="main" class="main">
    <div class="pagetitle">
        <h1>Comments</h1>
    </div>
    <section class="section">
        <div class="row">
            {% for comment in comments %}
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Comment by {{ comment.author }}</h5>
                        <p>{{ comment.content }}</p>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </section>
</main>
{% endblock %}
