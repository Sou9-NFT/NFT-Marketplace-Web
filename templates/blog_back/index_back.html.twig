{% extends 'base_back.html.twig' %}

{% block title %}Blog Management{% endblock %}

{% block sidebar_nav %}
    {{ parent() }}
    
    <li class="nav-item">
        <a class="nav-link collapsed" data-bs-target="#blog-nav" data-bs-toggle="collapse" href="#">
            <i class="bi bi-journal-text"></i><span>Blogs</span><i class="bi bi-chevron-down ms-auto"></i>
        </a>
        <ul id="blog-nav" class="nav-content collapse" data-bs-parent="#sidebar-nav">
            <li>
                <a href="{{ path('app_blog_index') }}">
                    <i class="bi bi-circle"></i><span>Posts</span>
                </a>
            </li>
            <li>
                <a href="{{ path('app_comment_index') }}">
                    <i class="bi bi-circle"></i><span>Comments</span>
                </a>
            </li>
        </ul>
    </li>
{% endblock %}

{% block main %}
<div class="pagetitle">
    <h1>Blog Management</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_admin') }}">Home</a></li>
            <li class="breadcrumb-item active">Blog Management</li>
        </ol>
    </nav>
</div>

<section class="section dashboard">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Blog Overview</h5>
                    <p>Welcome to the blog management section. Here you can manage all blog posts and comments.</p>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card info-card">
                                <div class="card-body">
                                    <h5 class="card-title">Posts</h5>
                                    <div class="d-flex align-items-center">
                                        <div class="ps-3">
                                            <a href="{{ path('app_blog_index') }}" class="btn btn-primary">Manage Posts</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="card info-card">
                                <div class="card-body">
                                    <h5 class="card-title">Comments</h5>
                                    <div class="d-flex align-items-center">
                                        <div class="ps-3">
                                            <a href="{{ path('app_comment_index') }}" class="btn btn-primary">Manage Comments</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}