{% extends 'base.html.twig' %}

{% block title %}Password Reset{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Password Reset</h1>
        
        {% if resetForm is defined %}
            {# This is for the password reset form page #}
            <p>Please enter your new password below.</p>

            {{ form_start(resetForm) }}
                <div class="form-group">
                    {{ form_label(resetForm.plainPassword) }}
                    {{ form_widget(resetForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(resetForm.plainPassword) }}
                </div>
                <button type="submit" class="btn btn-primary">Reset Password</button>
            {{ form_end(resetForm) }}
        {% else %}
            {# This is for the email template #}
            <p>You have requested to reset your password. Please click the link below to create a new password:</p>
            
            {% if resetUrl is defined %}
                <p><a href="{{ resetUrl }}" class="btn btn-primary">Reset Your Password</a></p>
            {% endif %}
            
            <p>This link will expire in 1 hour.</p>
            <p>If you did not request a password reset, please ignore this email.</p>
        {% endif %}
    </div>
{% endblock %}
