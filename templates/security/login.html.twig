{% extends 'base.html.twig' %}

{% block title %}Login - NFT Marketplace{% endblock %}

{% block body %}
<!-- ***** Login Area Start ***** -->
<section class="author-area">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-7">
                <!-- Intro -->
                <div class="intro text-center">
                    <span>Login</span>
                    <h3 class="mt-3 mb-0">Login to your Account</h3>
                    <p>Connect to manage your NFTs and participate in the marketplace.</p>
                </div>
                <!-- Item Form -->
                <form class="item-form card no-hover" method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group mt-3">
                                <input type="email" class="form-control" name="email" value="{{ last_username }}" placeholder="Enter your Email" required autofocus>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group mt-3">
                                <input type="password" class="form-control" name="password" placeholder="Enter your Password" required>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group mt-3">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="checkbox" name="_remember_me">
                                    <label class="form-check-label">Remember Me</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <button class="btn w-100 mt-3 mt-sm-4" type="submit">Sign In</button>
                        </div>
                        <div class="col-12 text-center mt-3">
                            <a href="{{ path('app_reset_password_request') }}">Forgot your password?</a>
                        </div>
                        <div class="col-12">
                            <hr>
                            <div class="other-option">
                                <span class="d-block text-center mb-4">Or Login With</span>
                                <!-- Social Icons -->
                                <div class="social-icons">
                                    <a href="{{ path('connect_github') }}" class="github-button">
                                        <i class="fab fa-github"></i>
                                        <span>Connect with GitHub</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 text-center mt-3">
                            <p>Don't have an account? <a href="{{ path('app_register') }}">Register</a></p>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- ***** Login Area End ***** -->
{% endblock %}
