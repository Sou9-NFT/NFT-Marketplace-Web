{% extends 'base.html.twig' %}

{% block title %}Password Reset Request{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Password Reset Request</h1>
        <p>Please enter your email address to request a password reset link.</p>

        {{ form_start(requestForm) }}
            <div class="form-group">
                {{ form_label(requestForm.email) }}
                {{ form_widget(requestForm.email, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(requestForm.email) }}
            </div>
            <button type="submit" class="btn btn-primary">Request Password Reset</button>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}
