{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Categories</h1>
            <a href="{{ path('app_category_new') }}" class="btn btn-primary">Create New Category</a>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Description</th>
                        <th>Allowed Types</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.name }}</td>
                        <td>{{ category.type|capitalize }}</td>
                        <td>{{ category.description|slice(0, 100) }}{% if category.description|length > 100 %}...{% endif %}</td>
                        <td>
                            <small>{{ category.allowedMimeTypes|join(', ') }}</small>
                        </td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-sm btn-info">Show</a>
                                <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-sm btn-primary">Edit</a>
                                <form method="post" action="{{ path('app_category_delete', {'id': category.id}) }}" onsubmit="return confirm('Are you sure you want to delete this category?');" style="display: inline-block;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                    <button class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">No categories found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
