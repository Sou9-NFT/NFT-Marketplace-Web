{% extends 'base.html.twig' %}

{% block title %}New Category{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Create New Category</h1>
            <a href="{{ path('app_category_index') }}" class="btn btn-outline-secondary">Back to list</a>
        </div>

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        {% for label, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="alert alert-{{ label }}">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        {% endfor %}

                        <div class="mb-3">
                            {{ form_label(form.name) }}
                            {{ form_widget(form.name) }}
                            {{ form_errors(form.name) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.type) }}
                            {{ form_widget(form.type) }}
                            {{ form_errors(form.type) }}
                            <div class="form-text">
                                Select the type of content for this category. Supported formats:
                                <ul class="mt-2 mb-0">
                                    <li><strong>Image:</strong> JPEG, PNG, GIF, WebP</li>
                                    <li><strong>Video:</strong> MP4, WebM, OGG</li>
                                    <li><strong>Audio:</strong> MP3, OGG, WAV, WebM</li>
                                </ul>
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.description) }}
                            {{ form_widget(form.description) }}
                            {{ form_errors(form.description) }}
                        </div>

                        <div class="d-grid gap-2">
                            <button class="btn btn-primary">Create Category</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
