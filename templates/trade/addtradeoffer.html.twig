{% extends 'base.html.twig' %}

{% block title %}New TradeOffer{% endblock %}

{% block body %}
<section class="author-area">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-12 col-md-4">
                <div class="card no-hover p-5">
                    <div class="text-center">
                        <h4 id="previewOfferedName" class="mt-3">Offered Item</h4>
                        <img id="previewOfferedImage" src="https://via.placeholder.com/300" class="rounded-circle" style="max-width: 100%; height: auto;">
                        <img src="/front_office/img/logo/tradeArrows.png">
                        <img id="previewReceivedImage" src="https://via.placeholder.com/300" class="rounded-circle" style="max-width: 100%; height: auto;">
                        <h4 id="previewReceivedName" class="mt-3">Received Item</h4>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-7">
                <div class="intro mt-5 mt-lg-0 mb-4 mb-lg-5">
                    <div class="intro-content">
                        <span>Get Started</span>
                        <h3 class="mt-3 mb-0">Create Trade Offer</h3>
                    </div>
                </div>
                <div class="table-responsive" style="max-width: 600px; margin: auto;">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}} ) }}
                        <table border="0">
                            <tbody>
                                <tr>
                                    <td style="width: 200px;">{{ form_label(form.receiver_name) }}</td>
                                    <td>
                                        {{ form_widget(form.receiver_name, {'attr': {'class': 'form-control form-control-sm'}}) }}
                                        {{ form_errors(form.receiver_name) }}
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width: 200px;">{{ form_label(form.offered_item) }}</td>
                                    <td>
                                        {{ form_widget(form.offered_item, {'attr': {'class': 'form-control form-control-sm'}}) }}
                                        {{ form_errors(form.offered_item) }}
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width: 200px;">{{ form_label(form.received_item) }}</td>
                                    <td>
                                        {{ form_widget(form.received_item, {'attr': {'class': 'form-control form-control-sm'}}) }}
                                        {{ form_errors(form.received_item) }}
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width: 200px;">{{ form_label(form.description) }}</td>
                                    <td>
                                        {{ form_widget(form.description, {'attr': {'class': 'form-control form-control-sm'}}) }}
                                        {{ form_errors(form.description) }}
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        
                        <div class="d-flex justify-content-between mt-3">
                            <a href="{{ path('app_trade_offer_index') }}" class="btn btn-link">Back to list</a>
                            <button class="btn btn-primary" type="submit">Create</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</section>
<script>
document.addEventListener('DOMContentLoaded', function() {
    const offeredSelect = document.getElementById('trade_offer_offered_item');
    const receivedSelect = document.getElementById('trade_offer_received_item');
    const previewOffered = document.getElementById('previewOfferedName');
    const previewReceived = document.getElementById('previewReceivedName');

    offeredSelect.addEventListener('change', () => {
        previewOffered.textContent = offeredSelect.options[offeredSelect.selectedIndex].text;
    });

    receivedSelect.addEventListener('change', () => {
        previewReceived.textContent = receivedSelect.options[receivedSelect.selectedIndex].text;
    });
});
</script>
{% endblock %}
