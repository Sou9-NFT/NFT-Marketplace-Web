{% extends 'base.html.twig' %}

{% block title %}New Trade Offer{% endblock %}

{% block body %}
<section class="author-area">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-12 col-md-4">
                <div class="card no-hover p-5">
                    <div class="text-center">
                        <h4 class="mt-3">Trade Details</h4>
                        <div class="d-flex flex-column align-items-center">
                            <div class="text-center mb-4">
                                <img src="{{ asset('uploads/profile_pictures/' ~ (app.user.profilePicture ?? 'userdefault.png')) }}" class="rounded-circle" style="max-width: 100px; height: auto;">
                                <p class="mt-2 mb-0">You</p>
                            </div>
                            <img src="/front_office/img/logo/tradeArrows2.png" class="my-3" style="transform: rotate(90deg);">
                            <div class="text-center">
                                <img src="{{ asset('uploads/profile_pictures/' ~ (form.receiver_name.vars.data.profilePicture ?? 'userdefault.png')) }}" class="rounded-circle" style="max-width: 100px; height: auto;">
                                <p class="mt-2 mb-0">{{ form.receiver_name.vars.data.name }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-7">
                <div class="intro mt-5 mt-lg-0 mb-4 mb-lg-5">
                    <div class="intro-content">
                        <span>Get Started</span>
                        <h3 class="mt-3 mb-0">Create Trade Offer</h3>
                    </div>
                </div>
                <div class="table-responsive" style="max-width: 600px; margin: auto;">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}} ) }}
                        <table border="0">
                            <tbody>
                                <tr>
                                    <td style="width: 200px;">{{ form_label(form.receiver_name) }}</td>
                                    <td>
                                        {{ form_widget(form.receiver_name) }}
                                        {{ form_errors(form.receiver_name) }}
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width: 200px;">{{ form_label(form.offered_item) }}</td>
                                    <td>
                                        {{ form_widget(form.offered_item) }}
                                        {{ form_errors(form.offered_item) }}
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width: 200px;">{{ form_label(form.received_item) }}</td>
                                    <td>
                                        {{ form_widget(form.received_item) }}
                                        {{ form_errors(form.received_item) }}
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width: 200px;">{{ form_label(form.description) }}</td>
                                    <td>
                                        {{ form_widget(form.description) }}
                                        {{ form_errors(form.description) }}
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary">Create Trade Offer</button>
                            <a href="{{ path('app_trade_offer_index') }}" class="btn btn-secondary">Back to List</a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}