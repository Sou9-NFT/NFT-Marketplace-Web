{% extends 'base.html.twig' %}

{% block title %}Edit Trade Offer{% endblock %}

{% block body %}
<section class="author-area">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                {% endfor %}

                <div class="intro text-center">
                    <h3 class="mt-3 mb-0">Edit Trade Offer</h3>
                </div>
                <div class="item-form card no-hover">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        {{ form_errors(form) }}
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group mt-3">
                                    {{ form_label(form.offered_item) }}
                                    {{ form_widget(form.offered_item, {'attr': {'class': 'form-control', 'style': 'font-size: 1.2rem; height: 3rem; padding: 5px;'}}) }}
                                    {{ form_errors(form.offered_item) }}
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group mt-3">
                                    {{ form_label(form.description) }}
                                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                                    {{ form_errors(form.description) }}
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="d-flex justify-content-between mt-4">
                                    <div>
                                        <a href="{{ path('app_trade_offer_index') }}" class="btn btn-link">Back to list</a>
                                    </div>
                                    <button class="btn btn-primary" type="submit">Update</button>
                                </div>
                            </div>
                        </div>
                        {# Render hidden fields but exclude receiver_name and received_item #}
                        {% for field in form %}
                            {% if field.vars.name not in ['receiver_name', 'received_item', 'offered_item', 'description'] %}
                                {{ form_widget(field) }}
                            {% endif %}
                        {% endfor %}
                    {{ form_end(form, {render_rest: false}) }}
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
