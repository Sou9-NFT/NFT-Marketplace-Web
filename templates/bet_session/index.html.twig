{% extends 'base.html.twig' %}

{% block title %}NFT Marketplace - Live Auctions{% endblock %}

{% block body %}
<section class="breadcrumb-area overlay-dark d-flex align-items-center">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <!-- Breadcrumb Content -->
                <div class="breadcrumb-content text-center">
                    <h2 class="m-0">Auctions</h2>
                    <ol class="breadcrumb d-flex justify-content-center">
                        <li class="breadcrumb-item"><a href="{{ path('app_home_page') }}">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">Explore</a></li>
                        <li class="breadcrumb-item active">Live Auctions</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ***** Breadcrumb Area End ***** -->

<!-- ***** Live Auctions Area Start ***** -->
<section class="live-auctions-area load-more">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-7">
                <!-- Intro -->
                <div class="intro text-center">
                    <span>Auctions</span>
                    <h3 class="mt-3 mb-0">Live Auctions</h3>
                    <p>Discover and participate in our live auctions. Bid on unique NFTs and become the owner of exclusive digital assets.</p>
                </div>
            </div>
        </div>
        <div class="row items">
            {% if bet_sessions is empty %}
                <div class="col-12 text-center">
                    <p>No live auctions available at the moment.</p>
                </div>
            {% else %}
                {% for bet_session in bet_sessions %}
                    <div class="col-12 col-sm-6 col-lg-3 item">
                        <div class="card">
                            <div class="image-over">
                                <a href="{{ path('app_item_details', {'id': bet_session.id}) }}">
                                    <img class="card-img-top" src="{{ asset('front_office/img/content/auction_2.jpg') }}" alt="">
                                </a>
                            </div>
                            <!-- Card Caption -->
                            <div class="card-caption col-12 p-0">
                                <!-- Card Body -->
                                <div class="card-body">
                                    <div class="countdown-times mb-3">
                                        <div class="text-center mb-2 ">Time Remaining</div>
                                        <div class='countdown d-flex justify-content-center' data-date="{{ bet_session.endTime|date('Y-m-d') }}" data-format="datetime"></div>
                                        <script>
                                            console.log("Countdown date: {{ bet_session.endTime|date('Y-m-s') }}");
                                        </script>
                                    </div>
                                    <a href="{{ path('app_item_details', {'id': bet_session.id}) }}">
                                        <h5 class="mb-0"> {{ bet_session.artwork.title }}</h5>
                                    </a>
                                    <a class="seller d-flex align-items-center my-3" href="#">
                                        <img class="avatar-sm rounded-circle" src="{{ asset('front_office/img/content/avatar_1.jpg') }}" alt="">
                                        <span class="ml-2">@{{ bet_session.author.name }}</span>
                                    </a>
                                    <div class="card-bottom d-flex justify-content-between">
                                        <span>{{bet_session.currentPrice}}</span>
                                        <span>1 of 1</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>

        {% if pages_count > 1 %}
            <div class="row pt-4">
                <div class="col-12 text-center">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center">
                            <li class="page-item {% if current_page == 1 %}disabled{% endif %}">
                                <a class="page-link text-white bg-dark border-secondary" href="{{ path('app_bet_session_active', {'page': current_page - 1}) }}">Previous</a>
                            </li>
                            {% for i in 1..pages_count %}
                                <li class="page-item {% if i == current_page %}active{% endif %}">
                                    <a class="page-link text-white bg-dark border-secondary {% if i == current_page %}bg-primary text-white{% endif %}" href="{{ path('app_bet_session_active', {'page': i}) }}">{{ i }}</a>
                                </li>
                            {% endfor %}
                            <li class="page-item {% if current_page == pages_count %}disabled{% endif %}">
                                <a class="page-link text-white bg-dark border-secondary" href="{{ path('app_bet_session_active', {'page': current_page + 1}) }}">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        {% endif %}
    </div>
</section>
<!-- ***** Live Auctions Area End ***** -->

{% endblock %}
