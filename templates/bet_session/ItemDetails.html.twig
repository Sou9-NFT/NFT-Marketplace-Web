{% extends 'base.html.twig' %}

{% block title %}Item Detail{% endblock %}

{% block body %}

	<div
		class="main">
		<!-- ***** Breadcrumb Area Start ***** -->
		<section class="breadcrumb-area overlay-dark d-flex align-items-center">
			<div class="container">
				<div class="row">
					<div
						class="col-12">
						<!-- Breamcrumb Content -->
						<div class="breadcrumb-content text-center">
							<h2 class="m-0">Item Details</h2>
							<ol class="breadcrumb d-flex justify-content-center">
								<li class="breadcrumb-item">
									<a href="index.html">Home</a>
								</li>
								<li class="breadcrumb-item">
									<a href="#">Explore</a>
								</li>
								<li class="breadcrumb-item active">Item Details</li>
							</ol>
						</div>
					</div>
				</div>
			</div>
		</section>
		<!-- ***** Breadcrumb Area End ***** -->
		<!-- ***** Item Details Area Start ***** -->
		<section class="item-details-area">
			<div class="container">
				<div class="row justify-content-between">
					<div class="col-12 col-lg-5">
						<div class="item-info">
							<div class="item-thumb text-center">
								{% if bet_session.artwork.imageName %}
									<img src="{{ asset('uploads/artworks/' ~ bet_session.artwork.imageName) }}" alt="" style="width: 450px; height: 450px;">
								{% else %}
									<img src="{{ asset('front_office/img/content/auction_2.jpg') }}" alt="">
								{% endif %}
							</div>
							<div class="card no-hover countdown-times my-4">
								{% if bet_session.status == 'active' %}
									<div class='countdown d-flex justify-content-center' data-date="{{ bet_session.endTime|date('Y-m-d') }}"></div>
								{% elseif bet_session.status == 'pending' %}
									<div class='countdown d-flex justify-content-center' data-date="{{ bet_session.startTime|date('Y-m-d') }}"></div>
								{% endif %}
							</div>
							<!-- Netstorm Tab -->
							<ul class="netstorm-tab nav nav-tabs" id="nav-tab">
								<li>
									<a class="active" id="nav-home-tab" data-toggle="pill" href="#nav-home">
										<h5 class="m-0">Bids</h5>
									</a>
								</li>
								<li>
									<a id="nav-profile-tab" data-toggle="pill" href="#nav-profile">
										<h5 class="m-0">History</h5>
									</a>
								</li>
								<li>
									<a id="nav-contact-tab" data-toggle="pill" href="#nav-contact">
										<h5 class="m-0">Details</h5>
									</a>
								</li>
							</ul>
							<!-- Tab Content -->
							<div class="tab-content" id="nav-tabContent">
								<div class="tab-pane fade show active" id="nav-home">
									<ul
										class="list-unstyled">
										<!-- Single Tab List -->
                                        {% for bid in bids %}
                                            <li class="single-tab-list d-flex align-items-center">
												{% if bid.author.profilePicture %}
													<img class="avatar-sm rounded-circle mr-3" src="{{ asset('uploads/profile_pictures/' ~ bid.author.profilePicture) }}" alt="">
												{% else %}
													<img class="avatar-sm rounded-circle mr-3" src="{{ asset('front_office/img/content/avatar_1.jpg') }}" alt="">
												{% endif %}
                                                <p class="m-0">Bid listed for
                                                    <strong>{{ bid.bidValue }} Dannous</strong>
													{{ bid.bidTime|date('d M Y H:i:s') }}
                                                    <br>by
                                                    <a href="author.html">@{{ bid.author.name }}</a>
                                                </p>
                                            </li>
                                        {% endfor %}
									</ul>
								</div>
								<div class="tab-pane fade" id="nav-profile">
									<ul
										class="list-unstyled">
										<!-- Single Tab List -->
                                        {% for bid in bids %}
                                            <li class="single-tab-list d-flex align-items-center">
                                              	{% if bid.author.profilePicture %}
													<img class="avatar-sm rounded-circle mr-3" src="{{ asset('uploads/profile_pictures/' ~ bid.author.profilePicture) }}" alt="">
												{% else %}
													<img class="avatar-sm rounded-circle mr-3" src="{{ asset('front_office/img/content/avatar_1.jpg') }}" alt="">
												{% endif %}
                                                <p class="m-0">Bid listed for
                                                    <strong>{{ bid.bidValue }} Dannous</strong>
                                                    {{ bid.bidTime|date('d M Y H:i:s') }}
                                                    <br>by
                                                    <a href="author.html">@{{ bid.author.name }}</a>
                                                </p>
                                            </li>
                                        {% endfor %}
									</ul>
								</div>
								<div
									class="tab-pane fade" id="nav-contact">
									<!-- Single Tab List -->
									<div class="owner-meta d-flex align-items-center mt-3">
										<span>Owner</span>
										<a class="owner d-flex align-items-center ml-2" href="author.html">
											<img class="avatar-sm rounded-circle" src="{{ asset('front_office/img/content/avatar_1.jpg') }}" alt="">
											<h6 class="ml-2">Themeland</h6>
										</a>
									</div>
									<p class="mt-2">Created :
										{{ bet_session.createdat|date('Y-m-d H:i:s') }}</p>
								</div>
							</div>
						</div>
					</div>
					<div
						class="col-12 col-lg-6">
						<!-- Content -->
						<div class="content mt-5 mt-lg-0">
							<h3 class="m-0">{{bet_session.artwork.title}}</h3>
							<p>{{bet_session.artwork.description}}</p>
							<!-- Owner -->
							<div class="owner d-flex align-items-center">
							<span>Owned By</span>
								<a class="owner-meta d-flex align-items-center ml-3" href="author.html">
									{% if bet_session.artwork.owner.profilePicture %}
										<img class="avatar-sm rounded-circle" src="{{ asset('uploads/profile_pictures/' ~ bet_session.artwork.owner.profilePicture) }}" alt="">
									{% else %}
										<img class="avatar-sm rounded-circle" src="{{ asset('front_office/img/content/avatar_1.jpg') }}" alt="">
									{% endif %}
									<h6 class="ml-2">@{{bet_session.artwork.owner.name|capitalize}}</h6>
								</a>
							</div>
							<!-- Item Info List -->
							<div class="item-info-list mt-4">
								<div class="row items">
									<div class="col-12 col-md-6 item px-lg-2 d-flex flex-column justify-content-center ">
										<h6>Initial Price
											<strong style="color: yellow;">{{ bet_session.initialPrice }}</strong>
											Danous</h6>
									</div>
									<div class="col-12 col-md-6 item px-lg-2">
										<div class="card no-hover">
											<div class="single-seller d-flex align-items-center">
												<a href="author.html">
													{% if bet_session.artwork.creator.profilePicture %}
														<img class="avatar-md rounded-circle" src="{{ asset('uploads/profile_pictures/' ~ bet_session.artwork.creator.profilePicture) }}" alt="">
													{% else %}
														<img class="avatar-md rounded-circle" src="{{ asset('front_office/img/content/avatar_1.jpg') }}" alt="">
													{% endif %}
												</a>
												<!-- Seller Info -->
												<div class="seller-info ml-3">
													<a class="seller mb-2" href="author.html">@{{bet_session.artwork.creator.name|capitalize}}</a>
													<span>Creator</span>
												</div>
											</div>
										</div>
									</div>

									<div class="col-12 item px-lg-2">
										<div class="card no-hover">
											<h4 class="mt-0 mb-2">Highest Bid</h4>
											<div class="price d-flex justify-content-between align-items-center">
												<span class="text-success font-weight-bold">{{bet_session.currentPrice}}
													Dannous</span>
											</div>
										</div>
									</div>
							</div>
							
                            <div class="row mt-4 px-3">
                                <form action="{{ path('app_add_bid') }}" method="post">
                                    <input type="hidden" name="betSessionId" value="{{ bet_session.id }}">
                                    <div class="form-group">
                                        <label for="bidValue">Enter Your Bid</label>
                                        <input type="number" class="form-control" id="bidValue" name="bidValue" placeholder="Enter bid amount" required>
                                        {% for error in app.flashes('error_bid') %}
                                            <div class="alert alert-danger mt-2">
                                                {{ error }}
                                            </div>
                                        {% endfor %}
                                        {% for message in app.flashes('success_bid') %}
                                            <div class="alert alert-success mt-2">
                                                {{ message }}
                                            </div>
                                        {% endfor %}
                                    </div>
                                    <button type="submit" class="btn btn-bordered-white btn-primary btn-block">Submit Bid</button>
                                </form>
                            </div>
						</div>
					</div>
				</div>
			</div>
		</section>
		<!-- ***** Item Details Area End ***** -->
		{% if  live_bet_sessions|length==6  %}
			<!-- ***** Live Auctions Area Start ***** -->
			<section class="live-auctions-area pt-0">
				<div class="container">
					<div class="row">	
						<div
							class="col-12">
							<!-- Intro -->
							<div class="intro d-flex justify-content-between align-items-end m-0">
								<div class="intro-content">
									<span>Auctions</span>
									<h3 class="mt-3 mb-0">Live Auctions</h3>
								</div>
								<div class="intro-btn">
									<a class="btn content-btn" href="/auctions">View All</a>
								</div>
							</div>
						</div>
					</div>
					<div class="auctions-slides">
						<div class="swiper-container slider-mid items">
							<div class="swiper-wrapper">
								<script>
									console.log({{ live_bet_sessions|length }});
								</script>
								{% for session in live_bet_sessions %}

									<!-- Single Slide -->
									<div class="swiper-slide item">
										<div class="card">
											<div class="image-over">
												<a href="{{ path('app_item_details', {'id': session.id}) }}">
													{% if session.artwork.imageName %}
														<img class="card-img-top" src="{{ asset('uploads/artworks/' ~ session.artwork.imageName) }}" alt="">
													{% else %}
														<img class="card-img-top" src="{{ asset('front_office/img/content/auction_2.jpg') }}" alt="">
													{% endif %}
												</a>
											</div>
											<!-- Card Caption -->
											<div
												class="card-caption col-12 p-0">
												<!-- Card Body -->
												<div class="card-body">
													<div class="countdown-times mb-3">
														<div class="text-center mb-2">Time Remaining</div>
														<div class='countdown d-flex justify-content-center' data-date="{{ session.endTime|date('Y-m-d H:i:s') }}"></div>
													</div>

													<a href="/item_details/{{ session.id }}">
														<h5 class="mb-0">{{ session.artwork.title }}</h5>
													</a>
													<a class="seller d-flex align-items-center my-3" href="">
														{% if session.author.profilePicture %}
															<img class="avatar-sm rounded-circle" src="{{ asset('uploads/profile_pictures/' ~ session	.author.profilePicture) }}" alt="">
														{% else %}
															<img class="avatar-sm rounded-circle" src="{{ asset('front_office/img/content/author_1.jpg') }}" alt="">
														{% endif %}
														<span class="ml-2">@Nessim</span>
													</a>
													<div class="card-bottom d-flex justify-content-between">
														<span>{{ session.currentPrice }}
															Dannous</span>
														<span>1 of 1</span>
													</div>
												</div>
											</div>
										</div>
									</div>
								{% endfor %}
							</div>
							<div class="swiper-pagination"></div>
						</div>
					</div>
				</div>
			</section>
			<!-- ***** Live Auctions Area End ***** -->
		{% endif %}
>
</div>

<script>
    const eventSource = new EventSource('http://localhost:3000/.well-known/mercure?topic=https://example.com/bet_sessions/{{ bet_session.id }}');
    eventSource.onmessage = function(event) {
        const data = JSON.parse(event.data);
        if (data.status === 'updated') {
            // Update the current price
            document.querySelector('.price span').textContent = data.betSession.currentPrice + ' Dannous';

            // Update the bids list
            const bidsList = document.querySelector('.tab-content #nav-home ul');
            const newBid = document.createElement('li');
            newBid.classList.add('single-tab-list', 'd-flex', 'align-items-center');
            newBid.innerHTML = `
                <img class="avatar-sm rounded-circle mr-3" src="{{ asset('front_office/img/content/avatar_1.jpg') }}" alt="">
                <p class="m-0">Bid listed for
                    <strong>${data.bid.bidValue} ETH</strong>
                    ${new Date(data.bid.bidTime).toLocaleString()}
                    <br>by
                    <a href="author.html">@${data.bid.author.name}</a>
                </p>
            `;
            bidsList.insertBefore(newBid, bidsList.firstChild);
        }
    };
</script>
{% endblock %}
