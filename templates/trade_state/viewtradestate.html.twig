{% extends 'base.html.twig' %}

{% block title %}Trade State{% endblock %}

{% block body %}
<br><br><br><br><br>
<center>
    <h1>Trade State</h1>
</center>
<center>
            

    <table style="width: 80%; max-width: 800px; margin: auto;">
        <tbody>
            <tr>
                <th>Sender</th>
                <td>{{ trade_state.sender ? trade_state.sender.getName() : 'N/A' }}</td>
            </tr>
            <tr>
                <th>Receiver</th>
                <td>{{ trade_state.receiver ? trade_state.receiver.getName() : 'N/A' }}</td>
            </tr>
            <tr>
                <th>Received Item</th>
                <td>{{ trade_state.receivedItem ? trade_state.receivedItem.getTitle() : 'N/A' }}</td>
            </tr>
            <tr>
                <th>Offered Item</th>
                <td>{{ trade_state.offeredItem ? trade_state.offeredItem.getTitle() : 'N/A' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ trade_state.description }}</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-3">
        <a href="{{ path('app_trade_state_index') }}" class="btn btn-secondary">Back to list</a>
        <form method="post" action="{{ path('app_trade_state_accept', {'id': trade_state.id}) }}">
                    <button type="submit" class="btn btn-primary">Accept Trade</button>
                </form>
                <form action="{{ path('app_trade_state_reject', {'id': trade_state.id}) }}" method="post">
    <button type="submit" class="btn btn-danger">Reject</button>
</form>
        
    </div>
</center>
{% endblock %}
