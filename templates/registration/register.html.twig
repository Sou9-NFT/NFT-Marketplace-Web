{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

<div class="main">
    <!-- ***** Signup Area Start ***** -->
    <section class="author-area">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-8 col-lg-7">
                    <!-- Intro -->
                    <div class="intro text-center">
                        <span>Signup</span>
                        <h3 class="mt-3 mb-0">Create an Account</h3>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Laborum obcaecati dignissimos quae quo ad iste ipsum officiis deleniti asperiores sit.</p>
                    </div>
                    <!-- Item Form -->
                    {{ form_start(registrationForm, {'attr': {'class': 'item-form card no-hover'}}) }}
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group mt-3">
                                {{ form_row(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Enter your Email'}}) }}
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group mt-3">
                                {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Enter your Password'}}) }}
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group mt-3">
                                <div class="form-check form-check-inline">
                                    {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                                    <label class="form-check-label" for="registrationForm_agreeTerms">I agree to <a href="#">Privacy Policy</a></label>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <button class="btn w-100 mt-3 mt-sm-4" type="submit">Sign Up</button>
                        </div>
                        <div class="col-12">
                            <span class="d-block text-center mt-4">Already have an account? <a href="{{ path('app_login') }}">Login</a></span>
                        </div>
                        <div class="col-12">
                            <hr>
                            <div class="other-option">
                                <span class="d-block text-center mb-4">Or</span>
                                <!-- Social Icons -->
                                <div class="social-icons d-flex justify-content-center">
                                    <a class="facebook" href="#">
                                        <i class="fab fa-facebook-f"></i>
                                        <i class="fab fa-facebook-f"></i>
                                    </a>
                                    <a class="twitter" href="#">
                                        <i class="fab fa-twitter"></i>
                                        <i class="fab fa-twitter"></i>
                                    </a>
                                    <a class="google-plus" href="#">
                                        <i class="fab fa-google-plus-g"></i>
                                        <i class="fab fa-google-plus-g"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </section>
    <!-- ***** Signup Area End ***** -->

{% endblock %}
