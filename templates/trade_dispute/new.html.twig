{% extends 'base.html.twig' %}

{% block title %}New Trade Dispute{% endblock %}

{% block body %}
<section class="author-area">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8">
                <div class="intro text-center">
                    <h3 class="mt-3 mb-0">Create Trade Dispute</h3>
                </div>
                <div class="item-form card no-hover">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}} ) }}
                        <div class="row">
                            
                            <div class="col-12">
                                <div class="form-group mt-3">
                                    {{ form_label(form.reason) }}
                                    {{ form_widget(form.reason, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.reason) }}
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group mt-3">
                                    {{ form_label(form.evidence) }}
                                    {{ form_widget(form.evidence, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.evidence) }}
                                    <small class="form-text text-muted">Optional. Supported formats: JPEG, PNG, GIF (max 5MB)</small>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="d-flex justify-content-between mt-4">
                                    <a href="{{ path('app_trade_dispute_index') }}" class="btn btn-link">Back to list</a>
                                    <button class="btn btn-primary" type="submit">Create Dispute</button>
                                </div>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
