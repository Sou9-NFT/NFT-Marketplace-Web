{% extends 'base.html.twig' %}

{% block title %}TradeDispute{% endblock %}

{% block body %}
<br><br><br><br><br>
<center>
    <h1>Trade Dispute</h1>
</center>
<center>
    <table style="width: 80%; max-width: 800px; margin: auto;">
        <tbody>

            
            <tr>
                <th>Offered Item</th>
                <td>
                    <img src="{{ asset('uploads/artworks/' ~ trade_dispute.OfferedItem) }}" alt="Offered Item" style="max-width: 200px; height: auto;">
                </td>
            </tr>
            <tr>
                <th>Received Item</th>
                <td>
                    <img src="{{ asset('uploads/artworks/' ~ trade_dispute.ReceivedItem) }}" alt="Received Item" style="max-width: 200px; height: auto;">
                </td>
            </tr>
            <tr>
                <th>Reason</th>
                <td>{{ trade_dispute.reason }}</td>
            </tr>
            <tr>
                <th>Evidence</th>
                <td>
                    {% if trade_dispute.evidence %}
                        <img src="{{ asset('uploads/evidence/' ~ trade_dispute.evidence) }}" alt="Evidence" style="max-width: 200px; height: auto;">
                    {% else %}
                        No evidence provided
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Timestamp</th>
                <td>{{ trade_dispute.timestamp ? trade_dispute.timestamp|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ trade_dispute.status }}</td>
            </tr>
            <tr>
                <td colspan="2" style="text-align: center;">
                    <a href="{{ path('app_trade_dispute_index') }}" class="btn btn-secondary">Back to list</a>
                    {% if trade_dispute.status == 'pending' %}
                        <a href="{{ path('app_trade_dispute_edit', {'id': trade_dispute.id}) }}" class="btn btn-primary">Edit</a>
                    {% endif %}
                    {{ include('trade_dispute/_delete_form.html.twig') }}
                </td>
            </tr>
        </tbody>
    </table>
</center>
{% endblock %}
