{% extends 'base.html.twig' %}

{% block title %}Souk El NFT{% endblock %}

{% block body %}
        <!-- ***** Hero Area Start ***** -->

        <section class="hero-section">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-md-6 col-lg-7">
                        <span>{{ hero.subtitle|default('Souk EL NFT') }}</span>
                        <h1 class="mt-4">{{ hero.title|default('Discover, collect, and sell extraordinary NFTs') }}</h1>
                        <p>{{ hero.description|default('Explore on the world\'s first & largest NFT marketplace') }}</p>
                        <!-- Buttons -->
                        <div class="button-group">
                            <a class="btn btn-bordered-white" href="">
                                <i class="icon-rocket mr-2"></i>Explore
                            </a>
                            <a class="btn btn-bordered-white" href="">
                                <i class="icon-note mr-2"></i>Create
