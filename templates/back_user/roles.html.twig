{% extends 'base_back.html.twig' %}

{% block title %}Manage User Roles{% endblock %}

{% block body %}
    <div class="pagetitle">
        <h1>Manage User Roles</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_home_page_back') }}">Home</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_admin_user_index') }}">Users</a></li>
                <li class="breadcrumb-item active">Manage Roles</li>
            </ol>
        </nav>
    </div>

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Manage Roles for {{ user.name }}</h5>

                        <form method="post">
                            <div class="row mb-3">
                                <div class="col-sm-12">
                                    {% for role in available_roles %}
                                        <div class="form-check mb-2">
                                            <input class="form-check-input" type="checkbox" name="roles[]" value="{{ role }}" 
                                                   id="role_{{ role }}" {% if role in user.roles %}checked{% endif %}>
                                            <label class="form-check-label" for="role_{{ role }}">
                                                {{ role }}
                                            </label>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-12">
                                    <button type="submit" class="btn btn-primary">Save Roles</button>
                                    <a href="{{ path('app_admin_user_index') }}" class="btn btn-secondary">Cancel</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
