{% extends 'base_back.html.twig' %}

{% block title %}New User{% endblock %}

{% block body %}
    <div class="pagetitle">
        <h1>Create New User</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_home_page_back') }}">Home</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_back_user_index') }}">Users</a></li>
                <li class="breadcrumb-item active">New</li>
            </ol>
        </nav>
    </div>

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Create New User</h5>

                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}} ) }}
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Email</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.email, {
                                        'attr': {
                                            'class': 'form-control' ~ (form.email.vars.valid ? '' : ' is-invalid')
                                        }
                                    }) }}
                                    {% if not form.email.vars.valid %}
                                        <div class="invalid-feedback">
                                            {{ form_errors(form.email) }}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Name</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.name, {
                                        'attr': {
                                            'class': 'form-control' ~ (form.name.vars.valid ? '' : ' is-invalid')
                                        }
                                    }) }}
                                    {% if not form.name.vars.valid %}
                                        <div class="invalid-feedback">
                                            {{ form_errors(form.name) }}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Password</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.password, {
                                        'attr': {
                                            'class': 'form-control' ~ (form.password.vars.valid ? '' : ' is-invalid'),
                                            'type': 'password'
                                        }
                                    }) }}
                                    {% if not form.password.vars.valid %}
                                        <div class="invalid-feedback">
                                            {{ form_errors(form.password) }}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Profile Picture</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.profilePicture, {
                                        'attr': {
                                            'class': 'form-control' ~ (form.profilePicture.vars.valid ? '' : ' is-invalid'),
                                            'accept': 'image/*'
                                        }
                                    }) }}
                                    {% if not form.profilePicture.vars.valid %}
                                        <div class="invalid-feedback">
                                            {{ form_errors(form.profilePicture) }}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-10 offset-sm-2">
                                    <button type="submit" class="btn btn-primary">Create User</button>
                                    <a href="{{ path('app_back_user_index') }}" class="btn btn-secondary">Cancel</a>
                                </div>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
