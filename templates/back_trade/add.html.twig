{% extends 'base_back.html.twig' %}

{% block title %}New Trade Offer{% endblock %}

{% block body %}
<div class="pagetitle">
    <h1>Trade Offers</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="">Home</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_back_trade') }}">Trade Offers</a></li>
            <li class="breadcrumb-item active">New Trade Offer</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Create New Trade Offer</h5>

                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    <div class="row mb-3">
                        <div class="col-12">
                            {{ form_label(form.receiver_name, 'Receiver', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.receiver_name, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.receiver_name) }}
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-12">
                            {{ form_label(form.offered_item, 'Offered Item', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.offered_item, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.offered_item) }}
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-12">
                            {{ form_label(form.received_item, 'Received Item', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.received_item, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.received_item) }}
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-12">
                            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                            {{ form_errors(form.description) }}
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-12">
                            <button class="btn btn-primary">Create</button>
                            <a href="{{ path('app_back_trade') }}" class="btn btn-secondary">Back to list</a>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
