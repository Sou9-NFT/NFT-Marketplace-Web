{% extends 'base_back.html.twig' %}

{% block title %}Create New Trade Offer{% endblock %}

{% block content %}
<h1 class="text-center">Create Trade Offer</h1>
<br><br>
<div class="table-responsive" style="max-width: 600px; margin: auto;">
    {# Add enctype="multipart/form-data" to enable file upload #}
    {{ form_start(form, {'enctype': 'multipart/form-data'}) }}
    <table class="table table-sm table-bordered">
        <tbody>
            {% for field in form %}
                <tr>
                    <th style="width: 200px;">{{ form_label(field) }}</th>
                    <td>{{ form_widget(field, {'attr': {'class': 'form-control form-control-sm'}}) }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="mt-3 d-flex justify-content-between">
        <a href="{{ path('app_back_trade') }}" class="btn btn-secondary btn-sm">Back to list</a>
        <button type="submit" class="btn btn-primary btn-sm">Save</button>
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}
