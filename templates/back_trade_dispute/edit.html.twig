{% extends 'base_back.html.twig' %}

{% block title %}Edit Trade Dispute{% endblock %}

{% block body %}
<div class="pagetitle">
    <h1>Trade Disputes</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="">Home</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_admin_trade_dispute_index') }}">Trade Disputes</a></li>
            <li class="breadcrumb-item active">Edit Trade Dispute</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    

                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                        <div class="mb-3">
                            {{ form_label(form.status) }}
                            {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.status) }}
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_admin_trade_dispute_index') }}" class="btn btn-secondary">Back to List</a>
                            <button type="submit" class="btn btn-primary">Update</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
