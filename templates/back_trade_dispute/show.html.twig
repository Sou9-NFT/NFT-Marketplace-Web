{% extends 'base_back.html.twig' %}

{% block title %}View Trade Dispute{% endblock %}

{% block body %}
<div class="pagetitle">
    <h1>Trade Disputes</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="">Home</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_admin_trade_dispute_index') }}">Trade Disputes</a></li>
            <li class="breadcrumb-item active">View Trade Dispute</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Trade Dispute Details</h5>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <th>Reporter</th>
                                        <td>{{ trade_dispute.reporter ? trade_dispute.reporter.getName() : 'N/A' }}</td>
                                    </tr>
                                    <tr>
                                        <th>Offered Item</th>
                                        <td>{{ trade_dispute.tradeId ? trade_dispute.tradeId.offeredItem.getTitle() : 'N/A' }}</td>
                                    </tr>
                                    <tr>
                                        <th>Received Item</th>
                                        <td>{{ trade_dispute.tradeId ? trade_dispute.tradeId.receivedItem.getTitle() : 'N/A' }}</td>
                                    </tr>
                                    <tr>
                                        <th>Reason</th>
                                        <td>{{ trade_dispute.reason }}</td>
                                    </tr>
                                    <tr>
                                        <th>Evidence</th>
                                        <td>
                                            {% if trade_dispute.evidence %}
                                                <img src="{{ asset('uploads/evidence/' ~ trade_dispute.evidence) }}" alt="Evidence" class="img-fluid" style="max-width: 200px;">
                                            {% else %}
                                                No evidence provided
                                            {% endif %}
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Timestamp</th>
                                        <td>{{ trade_dispute.timestamp ? trade_dispute.timestamp|date('Y-m-d H:i:s') : '' }}</td>
                                    </tr>
                                    <tr>
                                        <th>Status</th>
                                        <td>{{ trade_dispute.status }}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <a href="{{ path('app_admin_trade_dispute_index') }}" class="btn btn-secondary">Back to List</a>
                            <a href="{{ path('app_admin_trade_dispute_edit', {'id': trade_dispute.id}) }}" class="btn btn-primary">Edit</a>
                            {{ include('back_trade_dispute/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
