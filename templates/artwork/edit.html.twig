                    {% extends 'base.html.twig' %}

{% block title %}Edit Artwork{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header">
                        <h1 class="h3 mb-0">Edit Artwork</h1>
                    </div>
                    <div class="card-body">
                        {% if artwork.imageName %}
                            <div class="mb-3">
                                <label class="form-label">Current Image</label>
                                <div>
                                    <img src="{{ asset('uploads/artworks/' ~ artwork.imageName) }}" alt="{{ artwork.title }}" class="img-thumbnail" style="max-width: 200px;">
                                </div>
                            </div>
                        {% endif %}

                        {{ form_start(form) }}
                            <div class="mb-3">
                                {{ form_label(form.title) }}
                                {{ form_widget(form.title) }}
                                {% if form_errors(form.title) %}
                                    <div class="text-danger">
                                        {{ form_errors(form.title) }}
                                    </div>
                                {% endif %}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.description) }}
                                {{ form_widget(form.description) }}
                                {% if form_errors(form.description) %}
                                    <div class="text-danger">
                                        {{ form_errors(form.description) }}
                                    </div>
                                {% endif %}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.price) }}
                                {{ form_widget(form.price) }}
                                {% if form_errors(form.price) %}
                                    <div class="text-danger">
                                        {{ form_errors(form.price) }}
                                    </div>
                                {% endif %}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.imageFile) }}
                                {{ form_widget(form.imageFile) }}
                                {% if form_errors(form.imageFile) %}
                                    <div class="text-danger">
                                        {{ form_errors(form.imageFile) }}
                                    </div>
                                {% endif %}
                                <small class="form-text text-muted">Leave empty to keep the current image</small>
                            </div>

                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <a href="{{ path('app_artwork_index') }}" class="btn btn-secondary me-md-2">Back to List</a>
                                <button type="submit" class="btn btn-primary">Save Changes</button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
