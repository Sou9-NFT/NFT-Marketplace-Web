{% extends 'base.html.twig' %}

{% block title %}Artwork List{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Artwork List</h1>
            <a href="{{ path('app_artwork_new') }}" class="btn btn-primary">Create New Artwork</a>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <div class="row row-cols-1 row-cols-md-3 g-4">
            {% for artwork in artworks %}
                <div class="col">
                    <div class="card h-100">
                        {% if artwork.imageName %}
                            <img src="{{ asset('uploads/artworks/' ~ artwork.imageName) }}" 
                                 class="card-img-top" 
                                 alt="{{ artwork.title }}"
                                 style="height: 200px; object-fit: cover;">
                        {% else %}
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" 
                                 style="height: 200px;">
                                <span class="text-muted">No Image</span>
                            </div>
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title">{{ artwork.title }}</h5>
                            <p class="card-text">{{ artwork.description|slice(0, 100) }}...</p>
                            <p class="card-text"><strong>Price: </strong>${{ artwork.price|number_format(2) }}</p>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="btn-group w-100">
                                <a href="{{ path('app_artwork_show', {'id': artwork.id}) }}" 
                                   class="btn btn-outline-primary">View</a>
                                <a href="{{ path('app_artwork_edit', {'id': artwork.id}) }}" 
                                   class="btn btn-outline-secondary">Edit</a>
                                <form method="post" action="{{ path('app_artwork_delete', {'id': artwork.id}) }}" 
                                      onsubmit="return confirm('Are you sure you want to delete this artwork?');" 
                                      style="display: inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ artwork.id) }}">
                                    <button class="btn btn-outline-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info">
                        No artworks found. Start by creating a new one!
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
    