{% extends 'base.html.twig' %}

{% block title %}Artwork List{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Artwork List</h1>
            <div>
                <a href="{{ path('app_category_index') }}" class="btn btn-outline-secondary me-2">Manage Categories</a>
                <a href="{{ path('app_artwork_new') }}" class="btn btn-primary">Create New Artwork</a>
            </div>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <div class="row row-cols-1 row-cols-md-3 g-4">
            {% for artwork in artworks %}
                <div class="col">
                    <div class="card h-100">
                        {% if artwork.imageName %}
                            {% if artwork.category.type == 'image' %}
                                <img src="{{ asset('uploads/artworks/' ~ artwork.imageName) }}" 
                                     class="card-img-top" 
                                     alt="{{ artwork.title }}"
                                     style="height: 200px; object-fit: cover;">
                            {% elseif artwork.category.type == 'video' %}
                                <video class="card-img-top" style="height: 200px; object-fit: cover;" controls>
                                    <source src="{{ asset('uploads/artworks/' ~ artwork.imageName) }}" type="video/mp4">
                                    Your browser does not support the video tag.
                                </video>
                            {% elseif artwork.category.type == 'audio' %}
                                <div class="card-img-top d-flex align-items-center justify-content-center" 
                                     style="height: 200px; background-color: #1a202c;">
                                    <audio controls class="w-100 px-3">
                                        <source src="{{ asset('uploads/artworks/' ~ artwork.imageName) }}" type="audio/mpeg">
                                        Your browser does not support the audio element.
                                    </audio>
                                </div>
                            {% endif %}
                        {% else %}
                            <div class="card-img-top d-flex align-items-center justify-content-center" 
                                 style="height: 200px; background-color: #1a202c;">
                                <span class="text-secondary">No Media</span>
                            </div>
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title text-light">{{ artwork.title }}</h5>
                            <span class="badge bg-info text-dark mb-2">{{ artwork.category.name }}</span>
                            <p class="card-text text-secondary">{{ artwork.description|slice(0, 100) }}...</p>
                            <p class="card-text text-light"><strong>Price: </strong>${{ artwork.price|number_format(2) }}</p>
                        </div>
                        <div class="card-footer">
                            <div class="btn-group w-100">
                                <a href="{{ path('app_artwork_show', {'id': artwork.id}) }}" 
                                   class="btn btn-outline-primary">View</a>
                                <a href="{{ path('app_artwork_edit', {'id': artwork.id}) }}" 
                                   class="btn btn-outline-secondary">Edit</a>
                                <form method="post" action="{{ path('app_artwork_delete', {'id': artwork.id}) }}" 
                                      onsubmit="return confirm('Are you sure you want to delete this artwork?');" 
                                      style="display: inline-block;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ artwork.id) }}">
                                    <button class="btn btn-outline-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info">
                        No artworks found. <a href="{{ path('app_artwork_new') }}">Create your first artwork</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <style>
        .card {
            background-color: #2d3748;
            border: none;
            border-radius: 0.5rem;
            overflow: hidden;
        }
        .card-body {
            background-color: #2d3748;
        }
        .card-footer {
            background-color: #1a202c;
            border-top: 1px solid #4a5568;
        }
        .text-secondary {
            color: #a0aec0 !important;
        }
        .btn-group .btn {
            margin: 0 2px;
            border-color: #4a5568;
        }
        .badge {
            padding: 0.5em 0.8em;
            font-weight: 500;
        }
        .alert-info {
            background-color: #2b6cb0;
            border-color: #2c5282;
            color: #ebf8ff;
        }
        .alert-info a {
            color: #fff;
            text-decoration: underline;
        }
        audio {
            filter: invert(100%) hue-rotate(180deg);
        }
        audio::-webkit-media-controls-panel {
            background-color: #4a5568;
        }
    </style>
{% endblock %}