{% extends 'base.html.twig' %}

{% block title %}New Comment{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2>Add a Comment</h2>
                    <p class="text-muted mb-0">Commenting on: {{ blog.title }}</p>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.content) }}
                            {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                            {{ form_errors(form.content) }}
                        </div>
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_blog_show', {'id': blog.id}) }}" class="btn btn-secondary">Back to Post</a>
                            <button type="submit" class="btn btn-primary">Post Comment</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
