{% extends 'base.html.twig' %}

{% block title %}Edit Comment{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card bg-dark border-0">
                <div class="card-body">
                    <h2 class="text-purple mb-4">Edit Comment</h2>

                    {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                    
                    <div class="mb-3">
                        {{ form_label(form.author, null, {'label_attr': {'class': 'text-purple'}}) }}
                        {{ form_widget(form.author, {'attr': {'class': 'form-control bg-dark text-light', 'placeholder': 'Your name'}}) }}
                        {{ form_errors(form.author) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.content, null, {'label_attr': {'class': 'text-purple'}}) }}
                        {{ form_widget(form.content, {'attr': {'class': 'form-control bg-dark text-light', 'rows': 5, 'placeholder': 'Your comment'}}) }}
                        {{ form_errors(form.content) }}
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <button type="submit" class="btn btn-purple">
                            <i class="fas fa-save"></i> Update Comment
                        </button>
                        <a href="{{ path('app_blog_show', {'id': comment.blog.id}) }}" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Post
                        </a>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

{% block stylesheets %}
{{ parent() }}
<style>
    .btn-purple {
        background-color: #6f42c1;
        border-color: #6f42c1;
        color: white;
        transition: all 0.2s;
    }
    .btn-purple:hover {
        background-color: #553098;
        border-color: #553098;
        color: white;
        transform: translateY(-2px);
    }
    .form-control:focus {
        border-color: #6f42c1;
        box-shadow: 0 0 0 0.2rem rgba(111, 66, 193, 0.25);
    }
    .text-purple {
        color: #6f42c1 !important;
    }
</style>
{% endblock %}
{% endblock %}
