{% extends 'base_back.html.twig' %}

{% block title %}Category Management{% endblock %}

{% block body %}
    <main id="main" class="main">
        <div class="pagetitle">
            <h1>Category Management</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active">Categories</li>
                </ol>
            </nav>
        </div>

        <section class="section">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h5 class="card-title">Categories</h5>
                                <a href="{{ path('app_back_category_new') }}" class="btn btn-primary">
                                    <i class="bi bi-plus-circle"></i> Create New Category
                                </a>
                            </div>

                            {% for label, messages in app.flashes %}
                                {% for message in messages %}
                                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                                        {{ message }}
                                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                    </div>
                                {% endfor %}
                            {% endfor %}

                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Type</th>
                                            <th>Description</th>
                                            <th>Allowed File Types</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for category in categories %}
                                        <tr>
                                            <td>{{ category.name }}</td>
                                            <td>{{ category.type }}</td>
                                            <td>{{ category.description|slice(0, 100) }}{% if category.description|length > 100 %}...{% endif %}</td>
                                            <td>
                                                {% for mime_type in category.allowedMimeTypes %}
                                                    <span class="badge bg-primary me-1">{{ mime_type }}</span>
                                                {% endfor %}
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="{{ path('app_back_category_edit', {'id': category.id}) }}" class="btn btn-sm btn-primary" title="Edit">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <form method="post" action="{{ path('app_back_category_delete', {'id': category.id}) }}" 
                                                          onsubmit="return confirm('Are you sure you want to delete this category?');" 
                                                          style="display: inline-block;">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                                        <button class="btn btn-sm btn-danger" title="Delete">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="5" class="text-center">No categories found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
{% endblock %}
