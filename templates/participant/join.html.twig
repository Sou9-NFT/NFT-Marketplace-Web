{% extends 'base.html.twig' %}

{% block title %}Join Raffle{% endblock %}

{% block body %}
    <div class="container mt-5 py-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h1 class="h3 mb-0 text-white">Join Raffle #{{ raffle.id }}</h1>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div class="mb-4">
                                <label for="name" class="form-label">Your Display Name</label>
                                <input type="text" id="name" name="name" class="form-control {% if form_errors.name %}is-invalid{% endif %}" required>
                                {% if form_errors.name %}
                                    <div class="invalid-feedback">
                                        {{ form_errors.name }}
                                    </div>
                                {% endif %}
                            </div>

                            <div class="d-flex justify-content-between mt-4">
                                <a href="{{ path('app_raffle_show', {'id': raffle.id}) }}" class="btn btn-secondary">Back to Raffle</a>
                                <button type="submit" class="btn btn-primary">Join Raffle</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
