{% extends 'base.html.twig' %}

{% block title %}Raffle Details{% endblock %}

{% block body %}
    <div class="container mt-5 py-4">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card">
                    <div class="card-header">
                        <h1 class="h3 mb-0 text-white">Raffle #{{ raffle.id }}</h1>
                    </div>
                    <div class="card-body">
                        {% if raffle.image %}
                            <div class="mb-4 text-center">
                                <img src="{{ asset('uploads/raffle_images/' ~ raffle.image) }}" alt="Raffle Image" class="img-fluid rounded" style="max-height: 400px; object-fit: contain;">
                            </div>
                        {% endif %}

                        <div class="mb-4">
                            {% set statusClass = raffle.status == 'active' ? 'success' : 'danger' %}
                            <div class="alert alert-{{ statusClass }} mb-4">
                                <strong>Status:</strong> {{ raffle.status|title }}
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>Creator:</strong> {{ raffle.creator.email }}</p>
                                    <p><strong>Start Time:</strong> {{ raffle.startTime ? raffle.startTime|date('Y-m-d H:i:s') : '' }}</p>
                                    <p><strong>End Time:</strong> {{ raffle.endTime ? raffle.endTime|date('Y-m-d H:i:s') : '' }}</p>
                                    <p><strong>Participants:</strong> {{ raffle.participants|length }}</p>
                                    
                                    {% if raffle.status == 'ended' and winner is defined and winner %}
                                        <div class="alert alert-success mt-3">
                                            <h5 class="alert-heading">ðŸŽ‰ Winner Announced!</h5>
                                            <p class="mb-0">Congratulations to <strong>{{ winner.name }}</strong>!</p>
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="col-md-6">
                                    <p><strong>Description:</strong></p>
                                    <p>{{ raffle.raffleDescription }}</p>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('app_raffle_index') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i>
                            </a>

                            <div class="d-flex gap-2">
                                {% if app.user %}
                                    <a href="{{ path('app_raffle_participants', {'id': raffle.id}) }}" class="btn btn-info">
                                        <i class="fas fa-users"></i> ({{ raffle.participants|length }})
                                    </a>

                                    {% set hasJoined = false %}
                                    {% for participant in raffle.participants %}
                                        {% if participant.user == app.user %}
                                            {% set hasJoined = true %}
                                        {% endif %}
                                    {% endfor %}

                                    {% if raffle.status == 'active' %}
                                        {% if not hasJoined %}
                                            <!-- The Join Raffle Button -->
                                            <button id="join-raffle-btn" class="btn btn-primary">
                                                <i class="fas fa-plus"></i>
                                            </button>

                                           <!-- Hidden reCAPTCHA container -->
<div id="recaptcha-container" style="display:none;" class="mt-3">
    <div class="g-recaptcha" data-sitekey="6LfqY-IqAAAAACttpfdbUpyENp14x6CiTFe_6hig"></div>
</div>

                                            <!-- Hidden form for submitting after reCAPTCHA verification -->
                                            <form id="join-raffle-form" action="{{ path('app_raffle_join', {'id': raffle.id}) }}" method="post" style="display:none;">
                                                <input type="hidden" name="g-recaptcha-response" id="g-recaptcha-response">
                                                <button type="submit" class="btn btn-primary">Submit</button>
                                            </form>

                                        {% else %}
                                            <span class="btn btn-secondary disabled">
                                                <i class="fas fa-check"></i>
                                            </span>
                                        {% endif %}
                                    {% else %}
                                        <span class="btn btn-secondary disabled">
                                            <i class="fas fa-times"></i>
                                        </span>
                                    {% endif %}
                                {% else %}
                                    <a href="{{ path('app_login') }}" class="btn btn-primary">
                                        <i class="fas fa-sign-in-alt"></i>
                                    </a>
                                {% endif %}

                                {% if app.user == raffle.creator %}
                                    <a href="{{ path('app_raffle_edit', {'id': raffle.id}) }}" class="btn btn-warning">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post" action="{{ path('app_raffle_delete', {'id': raffle.id}) }}" onsubmit="return confirm('Are you sure you want to delete this raffle?');" style="display: inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ raffle.id) }}">
                                        <button class="btn btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Load reCAPTCHA script -->
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>

    <!-- Your JavaScript code goes here -->
    <script>
document.getElementById('join-raffle-btn').addEventListener('click', function() {
    // Show the reCAPTCHA container
    document.getElementById('recaptcha-container').style.display = 'block';
    
    // Hide the Join button after it's clicked
    document.getElementById('join-raffle-btn').style.display = 'none';

    // Load reCAPTCHA and then automatically submit the form after verification
    grecaptcha.ready(function() {
        grecaptcha.execute('6LfqY-IqAAAAACttpfdbUpyENp14x6CiTFe_6hig', { action: 'join_raffle' }).then(function(token) {
            // Set the token value in the hidden input
            document.getElementById('g-recaptcha-response').value = token;
            
            // Log the token to the console for debugging
            console.log('reCAPTCHA token:', token);

            // Log that the form is being submitted
            console.log('Submitting the form...');

            // Submit the form
            document.getElementById('join-raffle-form').submit();
        });
    });
});
    </script>
{% endblock %}