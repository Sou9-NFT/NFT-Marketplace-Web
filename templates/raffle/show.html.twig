{% extends 'base.html.twig' %}

{% block title %}Raffle Details{% endblock %}

{% block body %}
    <div class="container mt-5 py-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h1 class="h3 mb-0 text-white">Raffle #{{ raffle.id }}</h1>
                    </div>
                    <div class="card-body">
                        <div class="mb-4 text-center">
                            <img src="{{ asset('uploads/raffle_images/' ~ raffle.image) }}" alt="Raffle Image" class="img-fluid rounded" style="max-height: 400px; object-fit: contain;">
                        </div>

                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <tbody class="text-white">
                                    <tr>
                                        <th class="text-white" style="width: 150px; background-color: rgba(255, 255, 255, 0.1);">Created by</th>
                                        <td class="text-white">{{ raffle.creatorName }}</td>
                                    </tr>
                                    <tr>
                                        <th class="text-white" style="background-color: rgba(255, 255, 255, 0.1);">Status</th>
                                        <td class="text-white">
                                            {% if raffle.status == 'active' %}
                                                <span class="badge bg-success">Active</span>
                                            {% else %}
                                                <span class="badge bg-danger">Ended</span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="text-white" style="background-color: rgba(255, 255, 255, 0.1);">Start Time</th>
                                        <td class="text-white">{{ raffle.startTime|date('Y-m-d H:i:s') }}</td>
                                    </tr>
                                    <tr>
                                        <th class="text-white" style="background-color: rgba(255, 255, 255, 0.1);">End Time</th>
                                        <td class="text-white">{{ raffle.endTime|date('Y-m-d H:i:s') }}</td>
                                    </tr>
                                    {% if raffle.status == 'ended' and winner_name %}
                                        <tr>
                                            <th class="text-white" style="background-color: rgba(255, 255, 255, 0.1);">Winner</th>
                                            <td class="text-white">{{ winner_name }}</td>
                                        </tr>
                                    {% endif %}
                                </tbody>
                            </table>
                        </div>

                        <div class="mt-4">
                            <h5 class="text-white mb-3">Participants</h5>
                            {% if raffle.participants|length > 0 %}
                                <div class="table-responsive">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th class="text-white" style="background-color: rgba(255, 255, 255, 0.1);">Name</th>
                                                <th class="text-white" style="background-color: rgba(255, 255, 255, 0.1);">Joined At</th>
                                            </tr>
                                        </thead>
                                        <tbody class="text-white">
                                            {% for participant in raffle.participants %}
                                                <tr>
                                                    <td class="text-white">{{ participant.name }}</td>
                                                    <td class="text-white">{{ participant.joinedAt|date('Y-m-d H:i:s') }}</td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            {% else %}
                                <p class="text-white">No participants yet.</p>
                            {% endif %}
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('app_raffle_index') }}" class="btn btn-secondary">Back to list</a>
                            
                            <div class="d-flex gap-2">
                                {% if raffle.status == 'active' %}
                                    <a href="{{ path('app_raffle_join', {'id': raffle.id}) }}" class="btn btn-primary">Join Raffle</a>
                                {% endif %}
                                <a href="{{ path('app_raffle_edit', {'id': raffle.id}) }}" class="btn btn-warning">Edit</a>
                                <form method="post" action="{{ path('app_raffle_delete', {'id': raffle.id}) }}" 
                                      onsubmit="return confirm('Are you sure you want to delete this raffle?');" 
                                      style="display: inline-block;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ raffle.id) }}">
                                    <button class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
