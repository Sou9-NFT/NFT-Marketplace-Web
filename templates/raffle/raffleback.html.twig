{% extends 'base_back.html.twig' %}

{% block title %}Raffle Management{% endblock %}

{% block body %}
    <main id="main" class="main">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1>Raffle Management</h1>
                <a href="{{ path('app_raffle_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add New Raffle
                </a>
            </div>
            
            <!-- Debug Info -->
            <div class="alert alert-info">
                Found {{ raffles|length }} raffles in the database
            </div>

            <!-- Simple Table -->
            <div class="card">
                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Description</th>
                                <th>Creator</th>
                                <th>Start Time</th>
                                <th>End Time</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for raffle in raffles %}
                                <tr>
                                    <td>{{ raffle.id }}</td>
                                    <td>
                                        {% if raffle.raffleDescription %}
                                            {{ raffle.raffleDescription }}
                                        {% else %}
                                            <span class="text-muted">No description</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if raffle.creator %}
                                            {{ raffle.creator.email }}
                                        {% else %}
                                            <span class="text-muted">Unknown</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if raffle.startTime %}
                                            {{ raffle.startTime|date('Y-m-d H:i') }}
                                        {% else %}
                                            <span class="text-muted">Not set</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if raffle.endTime %}
                                            {{ raffle.endTime|date('Y-m-d H:i') }}
                                        {% else %}
                                            <span class="text-muted">Not set</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <span class="badge bg-{{ raffle.status == 'active' ? 'success' : 'secondary' }}">
                                            {{ raffle.status|capitalize }}
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('app_raffle_edit', {'id': raffle.id}) }}" class="btn btn-primary btn-sm" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form method="post" action="{{ path('app_raffle_delete', {'id': raffle.id}) }}" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this raffle?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ raffle.id) }}">
                                                <button type="submit" class="btn btn-danger btn-sm" title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                            <a href="{{ path('app_raffle_participants', {'id': raffle.id}) }}" class="btn btn-info btn-sm" title="View Participants">
                                                <i class="bi bi-people"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="7" class="text-center">No raffles found</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
