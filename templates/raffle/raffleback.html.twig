{% extends 'base_back.html.twig' %}

{% block title %}Raffle Management{% endblock %}

{% block body %}
    <main id="main" class="main">
        <div class="pagetitle">
            <h1>Raffle Management</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active">Raffles</li>
                </ol>
            </nav>
        </div>

        <section class="section">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="card-title">Manage Raffles</h5>
                                <a href="{{ path('app_back_raffle_new') }}" class="btn btn-primary">
                                    <i class="bi bi-plus-circle"></i> Add New Raffle
                                </a>
                            </div>

                            {% for label, messages in app.flashes %}
                                {% for message in messages %}
                                    <div class="alert alert-{{ label }} alert-dismissible fade show">
                                        {{ message }}
                                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                    </div>
                                {% endfor %}
                            {% endfor %}

                            <!-- Simple Table -->
                            <table class="table table-striped datatable">
                                <thead>
                                    <tr>
                                        <th scope="col">ID</th>
                                        <th scope="col">Title</th>
                                        <th scope="col">Description</th>
                                        <th scope="col">Creator</th>
                                        <th scope="col">Start Time</th>
                                        <th scope="col">End Time</th>
                                        <th scope="col">Status</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for raffle in raffles %}
                                        <tr>
                                            <td>{{ raffle.id }}</td>
                                            <td>{{ raffle.title }}</td>
                                            <td>
                                                {% if raffle.raffleDescription %}
                                                    {{ raffle.raffleDescription|length > 50 ? raffle.raffleDescription|slice(0, 50) ~ '...' : raffle.raffleDescription }}
                                                {% else %}
                                                    <span class="text-muted">No description</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if raffle.creator %}
                                                    {{ raffle.creator.email }}
                                                {% else %}
                                                    <span class="text-muted">Unknown</span>
                                                {% endif %}
                                            </td>
                                            <td>{{ raffle.startTime ? raffle.startTime|date('Y-m-d H:i') : '' }}</td>
                                            <td>{{ raffle.endTime ? raffle.endTime|date('Y-m-d H:i') : '' }}</td>
                                            <td>
                                                <span class="badge bg-{{ raffle.status == 'active' ? 'success' : 'secondary' }}">
                                                    {{ raffle.status|title }}
                                                </span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="{{ path('app_back_raffle_edit', {'id': raffle.id}) }}" class="btn btn-primary btn-sm" title="Edit">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <a href="{{ path('app_back_raffle_show', {'id': raffle.id}) }}" class="btn btn-info btn-sm" title="View">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <form method="post" action="{{ path('app_back_raffle_delete', {'id': raffle.id}) }}" style="display: inline-block" onsubmit="return confirm('Are you sure you want to delete this raffle?');">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ raffle.id) }}">
                                                        <button type="submit" class="btn btn-danger btn-sm" title="Delete">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="8" class="text-center">No raffles found</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
{% endblock %}
