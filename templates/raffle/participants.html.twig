{% extends 'base.html.twig' %}

{% block title %}Raffle Participants{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-gradient bg-primary text-white d-flex justify-content-between align-items-center py-3">
                <div class="d-flex align-items-center">
                    <i class="fas fa-users me-3" style="font-size: 1.5rem;"></i>
                    <div>
                        <h5 class="card-title h4 mb-0">Participants</h5>
                        <small class="text-white-50">
                            Raffle: {% if raffle.title %}{{ raffle.title }}{% else %}#{{ raffle.id }}{% endif %}
                        </small>
                    </div>
                </div>
                <span class="badge bg-white text-primary fs-6 d-flex align-items-center">
                    <i class="fas fa-user-group me-2"></i>
                    {{ raffle.participants|length }}
                </span>
            </div>

            <div class="card-body p-0">
                {% if raffle.participants|length > 0 %}
                    <div class="table-container">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead>
                                    <tr>
                                        <th class="ps-4" style="width: 60px;">#</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th style="width: 180px;">Joined At</th>
                                        {% if raffle.status == 'ended' and raffle.winnerId %}
                                            <th class="text-center" style="width: 100px;">Status</th>
                                        {% endif %}
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for participant in raffle.participants %}
                                        <tr>
                                            <td class="ps-4 text-muted">{{ loop.index }}</td>
                                            <td>
                                                <div class="participant-name">{{ participant.name }}</div>
                                            </td>
                                            <td>
                                                <div class="participant-email">{{ participant.user.email }}</div>
                                            </td>
                                            <td>
                                                <div class="join-time">
                                                    <div class="join-date">{{ participant.joinedAt|date('M d, Y') }}</div>
                                                    <div class="join-time-detail">{{ participant.joinedAt|date('H:i') }}</div>
                                                </div>
                                            </td>
                                            {% if raffle.status == 'ended' and raffle.winnerId %}
                                                <td class="text-center">
                                                    {% if raffle.winnerId == participant.id %}
                                                        <div class="winner-badge">
                                                            <span class="badge bg-success-subtle text-success border border-success-subtle">
                                                                <i class="fas fa-trophy me-1"></i>
                                                                Winner
                                                            </span>
                                                        </div>
                                                    {% endif %}
                                                </td>
                                            {% endif %}
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                {% else %}
                    <div class="text-center py-5">
                        <div class="empty-state mb-3">
                            <i class="fas fa-users text-muted"></i>
                        </div>
                        <h6 class="text-muted">No participants have joined this raffle yet</h6>
                        <p class="text-muted small">Participants will appear here once they join the raffle</p>
                    </div>
                {% endif %}
            </div>

            <div class="card-footer bg-light d-flex justify-content-between align-items-center py-3">
                <a href="{{ path('app_raffle_show', {'id': raffle.id}) }}" 
                   class="btn btn-secondary d-flex align-items-center">
                    <i class="fas fa-arrow-left me-2"></i>
                    Back to Raffle
                </a>
                
                {% if raffle.status == 'active' %}
                    <div class="raffle-status">
                        <span class="text-muted">
                            <i class="fas fa-clock text-primary me-1"></i>
                            Ends: <strong>{{ raffle.endTime|date('M d, Y H:i') }}</strong>
                        </span>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <style>
        /* Base table styles */
        .table {
            margin-bottom: 0;
            border-collapse: collapse;
            background: transparent;
            margin-top: 0.5rem;
        }

        .table > :not(caption) > * > * {
            padding: 1rem 0.75rem;
            border-bottom: 1px solid rgba(0,0,0,0.05);
            background-color: transparent !important;
            box-shadow: none;
        }

        /* Table rows */
        .table > tbody > tr {
            background-color: transparent;
            transition: all 0.2s ease;
        }

        .table > tbody > tr:nth-child(even) {
            background-color: rgba(0, 0, 0, 0.01);
        }

        .table > tbody > tr:last-child > td {
            border-bottom: 0;
        }

        .table > tbody > tr:hover {
            background-color: rgba(13, 110, 253, 0.04) !important;
            transform: translateY(-1px);
            box-shadow: 0 1px 2px rgba(0,0,0,0.05);
        }
        
        /* Table header */
        .table > thead > tr > th {
            color: #495057;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 0.5px;
            padding: 1.25rem 0.75rem;
            background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%) !important;
            border-bottom: 2px solid #dee2e6;
        }

        /* Table container */
        .table-responsive {
            border-radius: 0.5rem;
            overflow: hidden;
            background: transparent;
        }

        .table-container {
            position: relative;
            padding-top: 1rem;
            margin-top: 1rem;
            border-top: 1px solid rgba(0,0,0,0.05);
        }

        /* Card styles */
        .card {
            overflow: hidden;
            background: white;
            box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.075) !important;
        }

        .card-header {
            border-bottom: none;
            background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%);
            padding: 1.5rem;
            margin-bottom: 0;
        }

        .card-body {
            padding: 2.5rem 0 0 0 !important;
            position: relative;
        }

        .card-footer {
            background-color: #f8f9fa;
            border-top: 1px solid #e9ecef;
            padding: 1rem 1.25rem;
        }

        .card-header .badge {
            padding: 0.75rem 1rem;
            font-weight: 500;
            font-size: 0.875rem;
            background: white !important;
        }

        /* Participant info */
        .participant-name {
            font-weight: 500;
            color: #2c3338;
        }

        .participant-email {
            color: #6c757d;
        }

        .join-time {
            line-height: 1.3;
        }

        .join-date {
            font-weight: 500;
            color: #2c3338;
        }

        .join-time-detail {
            font-size: 0.875rem;
            color: #6c757d;
        }

        /* Winner badge */
        .winner-badge .badge {
            font-weight: 500;
            padding: 0.5rem 0.75rem;
            border-radius: 2rem;
            font-size: 0.8125rem;
        }

        /* Back button */
        .btn-secondary {
            background-color: #6c757d;
            border: none;
            padding: 0.5rem 1rem;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.2s ease;
        }

        .btn-secondary:hover {
            background-color: #5a6268;
            transform: translateY(-1px);
            box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.075);
        }

        /* Utility classes */
        .bg-success-subtle {
            background-color: #d1e7dd !important;
        }

        .border-success-subtle {
            border-color: #75b798 !important;
        }

        .bg-light {
            background: none !important;
        }

        /* Empty state */
        .empty-state {
            font-size: 3rem;
            color: #dee2e6;
            padding: 2rem 0;
        }
    </style>
{% endblock %}