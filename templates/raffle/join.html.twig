{% extends 'base.html.twig' %}

{% block title %}Join Raffle{% endblock %}

{% block body %}
    <div class="container mt-5 py-4">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h1 class="h3 mb-0">Join Raffle #{{ raffle.id }}</h1>
                    </div>
                    <div class="card-body">
                        {% for message in app.flashes('error') %}
                            <div class="alert alert-danger">
                                {{ message }}
                            </div>
                        {% endfor %}

                        {% if raffle.status != 'active' %}
                            <div class="alert alert-warning">
                                This raffle is no longer active.
                            </div>
                        {% else %}
                            <form method="post">
                                <div class="mb-3">
                                    <label for="name" class="form-label">Your Name</label>
                                    <input type="text" class="form-control {% if form_errors is defined and form_errors.name %}is-invalid{% endif %}" 
                                           id="name" name="name">
                                    {% if form_errors is defined and form_errors.name %}
                                        <div class="invalid-feedback">
                                            {{ form_errors.name }}
                                        </div>
                                    {% endif %}
                                    <div class="form-text text-muted">
                                        Name must be between 2 and 50 characters and can only contain letters, numbers, spaces, and hyphens.
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <a href="{{ path('app_raffle_show', {'id': raffle.id}) }}" class="btn btn-secondary px-4">Back</a>
                                    <button type="submit" class="btn btn-primary px-4">Join Raffle</button>
                                </div>
                            </form>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
