{% extends 'base.html.twig' %}

{% block title %}Edit Raffle{% endblock %}

{% block body %}
    <div class="container mt-5 py-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h1 class="h3 mb-0 text-white">Edit Raffle #{{ raffle.id }}</h1>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                            <div class="mb-3">
                                {{ form_label(form.creator_name, null, {'label_attr': {'class': 'form-label text-white'}}) }}
                                {{ form_widget(form.creator_name, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.creator_name) }}
                                <div class="form-text text-muted">
                                    Name must be between 2 and 50 characters.
                                </div>
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.image, null, {'label_attr': {'class': 'form-label text-white'}}) }}
                                {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.image) }}
                                {% if old.image_name is defined and old.image_name %}
                                    <div class="form-text text-white">
                                        Current file: {{ old.image_name }}
                                    </div>
                                {% endif %}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.endTime, null, {'label_attr': {'class': 'form-label text-white'}}) }}
                                {{ form_widget(form.endTime, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.endTime) }}
                                <div class="form-text text-muted">
                                    End time must be in the future
                                </div>
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.raffle_description, null, {'label_attr': {'class': 'form-label text-white'}}) }}
                                {{ form_widget(form.raffle_description, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                                {{ form_errors(form.raffle_description) }}
                                <div class="form-text text-muted">
                                    Describe your raffle (optional)
                                </div>
                            </div>

                            <div class="d-flex justify-content-between mt-4">
                                <a href="{{ path('app_raffle_show', {'id': raffle.id}) }}" class="btn btn-secondary">Back</a>
                                <button type="submit" class="btn btn-primary">Save Changes</button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
