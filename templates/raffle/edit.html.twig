{% extends 'base.html.twig' %}

{% block title %}Edit Raffle{% endblock %}

{% block body %}
    <div class="container mt-5 py-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h1 class="h3 mb-0 text-white">Edit Raffle #{{ raffle.id }}</h1>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                            <!-- Title -->
                            <div class="mb-3">
                                {{ form_label(form.title, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.title) }}
                            </div>

                            <!-- Creator Name -->
                            <div class="mb-3">
                                {{ form_label(form.creator_name, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.creator_name, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.creator_name) }}
                            </div>

                            <!-- Image -->
                            <div class="mb-3">
                                {{ form_label(form.image, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.image) }}
                                {% if raffle.image %}
                                    <div class="mt-2">
                                        <small class="text-muted">Current image:</small><br>
                                        <img src="{{ asset('uploads/raffle_images/' ~ raffle.image) }}" 
                                             alt="Current raffle image" 
                                             class="img-thumbnail mt-2" 
                                             style="max-height: 100px">
                                    </div>
                                {% endif %}
                            </div>

                            <!-- End Time -->
                            <div class="mb-3">
                                {{ form_label(form.endTime, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.endTime, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.endTime) }}
                                <div class="form-text text-muted">
                                    End time must be in the future
                                </div>
                            </div>

                            <!-- Raffle Description -->
                            <div class="mb-3">
                                {{ form_label(form.raffleDescription, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.raffleDescription, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                                {{ form_errors(form.raffleDescription) }}
                                <div class="form-text text-muted">
                                    Describe your raffle
                                </div>
                            </div>

                            <div class="d-flex justify-content-between mt-4">
                                <a href="{{ path('app_raffle_show', {'id': raffle.id}) }}" class="btn btn-secondary">Back to raffle</a>
                                <button type="submit" class="btn btn-primary">Save changes</button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
