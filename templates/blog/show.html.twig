
{% extends 'base.html.twig' %}

{% block title %}{{ blog.title }}{% endblock %}

{% block body %}
<div class="container mt-5">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success bg-dark text-success border-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="close text-success" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}

    <div class="blog-container">
        <div class="back-button-container mb-4">
            <a href="{{ path('app_blog_index') }}" class="btn-back">
                <i class="fas fa-arrow-left"></i>
                Back to Posts
            </a>
        </div>
        <!-- Blog Post -->
        <article class="blog-post mb-5">
        
       <h1 class="display-4 mb-4 text-purple">
           {{ blog.title }}
       </h1>

            <div class="meta-info mb-4">
                <span class="meta-item">
                    <i class="far fa-user text-purple"></i>
                    <span class="ml-2">{{ blog.user ? blog.user.name : 'Anonymous' }}</span>
                </span>
                <span class="meta-divider">â€¢</span>
                <span class="meta-item">
                    <i class="far fa-calendar-alt text-purple"></i>
                    <span class="ml-2">{{ blog.date ? blog.date|date('F d, Y') : 'N/A' }}</span>
                </span>
                <span class="meta-divider">â€¢</span>
                <span class="meta-item">
                    <i class="far fa-comments text-purple"></i>
                    <span class="ml-2">
                        {{ blog.comments|length }} 
                        {% if blog.comments|length == 1 %}Comment{% else %}Comments{% endif %}
                    </span>
                </span>
            </div>
            
            <div class="blog-content mb-5">
                <div class="lead text-light">{{ blog.content|raw }}</div>
            </div>

            <!-- Translation Section -->
            <div class="translation-section mb-5">
                <div class="translation-card">
                    <h5 class="translation-title">
                        <i class="fas fa-globe translation-icon"></i>
                        Translate this post
                    </h5>
                    <p class="translation-description mb-3">Choose your preferred language:</p>
                    <div class="language-buttons">
                        <form action="{{ path('app_blog_translate', {'id': blog.id, 'lang': 'fr'}) }}" method="post" class="language-form">
                            <button type="submit" class="btn btn-language">
                                <span class="flag">ðŸ‡«ðŸ‡·</span>
                                <span class="language-name">French</span>
                            </button>
                        </form>
                        <form action="{{ path('app_blog_translate', {'id': blog.id, 'lang': 'es'}) }}" method="post" class="language-form">
                            <button type="submit" class="btn btn-language">
                                <span class="flag">ðŸ‡ªðŸ‡¸</span>
                                <span class="language-name">Spanish</span>
                            </button>
                        </form>
                        <form action="{{ path('app_blog_translate', {'id': blog.id, 'lang': 'de'}) }}" method="post" class="language-form">
                            <button type="submit" class="btn btn-language">
                                <span class="flag">ðŸ‡©ðŸ‡ª</span>
                                <span class="language-name">German</span>
                            </button>
                        </form>
                        <form action="{{ path('app_blog_translate', {'id': blog.id, 'lang': 'it'}) }}" method="post" class="language-form">
                            <button type="submit" class="btn btn-language">
                                <span class="flag">ðŸ‡®ðŸ‡¹</span>
                                <span class="language-name">Italian</span>
                            </button>
                        </form>
                        <form action="{{ path('app_blog_translate', {'id': blog.id, 'lang': 'ar'}) }}" method="post" class="language-form">
                            <button type="submit" class="btn btn-language">
                                <span class="flag">ðŸ‡¸ðŸ‡¦</span>
                                <span class="language-name">Arabic</span>
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            {% if app.user and app.user == blog.user %}
                <div class="author-actions mb-4">
                    <form method="post" action="{{ path('app_blog_delete', {'id': blog.id}) }}" onsubmit="return confirm('Are you sure you want to delete this post?');" style="display: inline-block;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ blog.id) }}">
                        <button class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete Post
                        </button>
                    </form>
                </div>
            {% endif %}

            <div class="share-section">
                <span class="share-label">Share this post</span>
                <div class="share-buttons">
                    <a href="#" class="share-button facebook">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#" class="share-button twitter">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a href="#" class="share-button whatsapp">
                        <i class="fab fa-whatsapp"></i>
                    </a>
                </div>
            </div>
        </article>

        <!-- Comments Section -->
        <section class="comments-section">
            <div class="section-header">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="section-title">
                        <i class="far fa-comments"></i>
                        Comments 
                        <span class="comments-count">{{ blog.comments|length }}</span>
                    </h3>
                </div>
            </div>

            {% if app.user %}
                <div class="comment-form-container mb-4">
                    {{ form_start(comment_form) }}
                        <div class="mb-3">
                            {{ form_label(comment_form.content, 'Write your comment', {'label_attr': {'class': 'form-label'}}) }}
                          {#  {{ form_widget(comment_form.content, {'attr': {'class': 'form-control', 'rows': 4, 'placeholder': 'Share your thoughts...'}}) }} #}
                            {{ form_errors(comment_form.content) }}
                        </div>
                        <button type="submit" class="btn btn-purple">
                            <i class="fas fa-paper-plane"></i> Post Comment
                        </button>
                    {{ form_end(comment_form) }}
                </div>
            {% endif %}
        </section>
    </div>
</div>
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label == 'error' ? 'danger' : label }} bg-dark text-{{ label == 'error' ? 'danger' : label }} border-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="close text-{{ label == 'error' ? 'danger' : label }}" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}
{% endfor %}

{% endblock %}





