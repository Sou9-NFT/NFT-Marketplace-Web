{% extends 'base.html.twig' %}

{% block title %}Create New Post{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="mb-4">
                <h1 class="h2 mb-0">Create New Blog Post</h1>
            </div>

            {% for message in app.flashes('success_blog') %}
                <div class="alert alert-success_blog alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error_blog') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            <div class="card shadow-sm">
                <div class="card-body p-4">
                    {{ form_start(form) }}
                        {{ form_row(form.title) }}
                        {{ form_row(form.content) }}
                        {{ form_row(form.imageFile) }}
                        <small class="text-muted d-block mb-4">Upload an image for your blog post (JPEG, PNG, or GIF, max 1MB)</small>
                        
                        <div class="text-center">
                            <a href="{{ path('app_blog_index') }}" class="btn btn-outline-purple me-2">
                                <i class="fas fa-arrow-left me-2"></i>Back to Posts
                            </a>
                            <button type="submit" class="btn btn-purple">
                                <i class="fas fa-paper-plane me-2"></i>Publish Post
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
