{% extends 'base.html.twig' %}

{% block title %}Access Denied{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card border-danger">
                    <div class="card-header bg-danger text-white py-3">
                        <h2 class="h4 mb-0 text-center">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Access Denied
                        </h2>
                    </div>
                    <div class="card-body text-center p-4">
                        <div class="mb-4">
                            <p class="lead mb-0">
                                {% if raffle is defined %}
                                    Sorry, you don't have permission to modify this raffle.
                                    <br>
                                    <small class="text-muted">Only the creator can perform this action.</small>
                                {% else %}
                                    You don't have permission to access this resource.
                                {% endif %}
                            </p>
                        </div>
                        <div class="d-flex justify-content-center gap-3">
                            {% if raffle is defined %}
                                <a href="{{ path('app_raffle_show', {'id': raffle.id}) }}" 
                                   class="btn btn-primary">
                                    <i class="fas fa-arrow-left me-2"></i>
                                    Back to Raffle
                                </a>
                            {% endif %}
                            <a href="{{ path('app_raffle_index') }}" 
                               class="btn btn-outline-secondary">
                                <i class="fas fa-home me-2"></i>
                                All Raffles
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .card {
            border-radius: 0.5rem;
            overflow: hidden;
            box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.075);
            border: none;
        }

        .card-header {
            border-bottom: none;
        }

        .btn {
            padding: 0.625rem 1.25rem;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            transition: all 0.2s ease;
            border-radius: 0.375rem;
        }

        .btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 0.25rem 0.5rem rgba(0,0,0,0.1);
        }

        .lead {
            font-size: 1.15rem;
            line-height: 1.5;
        }

        .text-muted {
            font-size: 0.875rem;
            margin-top: 0.5rem;
        }
    </style>
{% endblock %}
