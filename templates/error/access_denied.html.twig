{% extends 'base.html.twig' %}

{% block title %}Access Denied{% endblock %}

{% block body %}
<div class="container mt-5 py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card text-center">
                <div class="card-body">
                    <div class="mb-4">
                        <i class="fas fa-lock text-warning" style="font-size: 4rem;"></i>
                    </div>
                    <h2 class="card-title mb-4">Access Denied</h2>
                    <p class="card-text mb-4">Sorry, you don't have permission to edit this raffle. Only the creator can make changes to their raffles.</p>
                    <div class="d-flex justify-content-center gap-3">
                        <a href="{{ path('app_raffle_show', {'id': raffle.id}) }}" class="btn btn-primary">
                            <i class="fas fa-eye me-2"></i>View Raffle
                        </a>
                        <a href="{{ path('app_raffle_index') }}" class="btn btn-secondary">
                            <i class="fas fa-list me-2"></i>Back to Raffles
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
